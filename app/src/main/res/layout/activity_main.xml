<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#F0F0F0">

    <!-- Enlarged Video Screen -->
    <FrameLayout
        android:id="@+id/videoScreen"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000000"
        android:layout_marginBottom="8dp" />

    <!-- Status Bar Below Video Screen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/tvBluetoothStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Bluetooth: Disconnected"
            android:textColor="#FF0000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvBatteryStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Battery: 80%"
            android:textColor="#4CAF50"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvClimbingSpeed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Speed: 0 cm/s"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Bluetooth Connect Button -->
    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect Bluetooth"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>

    <!-- Voice Command Button -->
    <Button
        android:id="@+id/btnVoiceCommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¤ Voice Command"
        android:textSize="14sp"
        android:padding="8dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <!-- Speed Control Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Climbing Speed Control"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSpeedStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed: Low Speed"
            android:textSize="16sp"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnSpeedDown"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="ðŸ”½ SLOWER"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSpeedUp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="ðŸ”¼ FASTER"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#FF5722"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Climbing Robot Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Climbing Robot"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnClimbForward"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="Forward"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnClimbStop"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="Stop"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnClimbReverse"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="Reverse"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Harvesting Robot Access Button -->
    <Button
        android:id="@+id/btnHarvesting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ðŸŒ¿ HARVESTING ARM CONTROL"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

</LinearLayout>