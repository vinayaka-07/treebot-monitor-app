<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#2196F3"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TreeBot Harvesting System"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v1.3"
                android:textSize="14sp"
                android:textColor="#BBDEFB"/>
        </LinearLayout>

        <!-- Video Feed Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Live Video Feed"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:drawableLeft="@android:drawable/ic_menu_camera"
                    android:drawablePadding="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="720p"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:background="#E3F2FD"
                    android:padding="4dp"/>
            </LinearLayout>

            <SurfaceView
                android:id="@+id/surfaceView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#000000" />

            <!-- ML Detection Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnCaptureAnalyze"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Capture & Analyze"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:background="#4CAF50"
                    android:layout_marginRight="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_camera"
                    android:drawablePadding="8dp"
                    android:elevation="2dp"/>

                <Button
                    android:id="@+id/btnToggleDetection"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Start Auto Detection"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:background="#FF9800"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@android:drawable/ic_media_play"
                    android:drawablePadding="8dp"
                    android:elevation="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ML Detection Results Section -->
        <LinearLayout
            android:id="@+id/mlResultsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Areca Nut Ripeness Detection"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:drawablePadding="8dp"/>

            <!-- Detection Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:background="#f8f9fa"
                android:padding="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Detection Status:"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/tvDetectionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Ripeness Result -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f8f9fa"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ripeness Level:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/tvRipenessLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Detected"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#666666"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Confidence:"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tvConfidence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBarConfidence"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="#4CAF50"/>
            </LinearLayout>

            <!-- Detected Objects Count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#f8f9fa"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Areca Nuts Detected:"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/tvDetectedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"/>
            </LinearLayout>

            <!-- Harvest Recommendation -->
            <LinearLayout
                android:id="@+id/harvestRecommendationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#e8f5e8"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recommendation:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"/>

                <TextView
                    android:id="@+id/tvHarvestRecommendation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to Harvest"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Status Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:drawablePadding="8dp"/>

            <!-- Connection Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Connection:"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/tvConnectionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Connected"
                    android:textSize="14sp"
                    android:textColor="#ff0000"
                    android:textStyle="bold"
                    android:drawableLeft="@android:drawable/presence_offline"
                    android:drawablePadding="4dp"/>
            </LinearLayout>

            <!-- Robot Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Robot Status:"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/tvRobotStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Robot Idle"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Connection Progress -->
            <ProgressBar
                android:id="@+id/progressBarConnection"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:indeterminate="true"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Control Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Robot Controls"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@android:drawable/ic_media_play"
                android:drawablePadding="8dp"/>

            <!-- Bluetooth Connect Button -->
            <Button
                android:id="@+id/btnBluetoothConnect"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Connect Bluetooth"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#2196F3"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@android:drawable/stat_sys_data_bluetooth"
                android:drawablePadding="12dp"
                android:elevation="2dp"/>

            <!-- Smart Harvest Button (New) -->
            <Button
                android:id="@+id/btnSmartHarvest"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Smart Harvest (AI Guided)"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#673AB7"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:drawablePadding="12dp"
                android:elevation="2dp"
                android:enabled="false"/>

            <!-- Manual Harvest Button -->
            <Button
                android:id="@+id/btnManualHarvest"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Manual Harvest"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#4CAF50"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:drawablePadding="12dp"
                android:elevation="2dp"
                android:enabled="false"/>

            <!-- Auto Harvest Button -->
            <Button
                android:id="@+id/btnAutoHarvest"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Auto Harvest"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#FF9800"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@android:drawable/ic_media_play"
                android:drawablePadding="12dp"
                android:elevation="2dp"
                android:enabled="false"/>
        </LinearLayout>

        <!-- Manual Controls Section (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/manualControlsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#ffffff"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6-DOF Manual Control"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@android:drawable/ic_menu_manage"
                android:drawablePadding="8dp"/>

            <!-- Base Joint Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#f8f9fa"
                android:padding="16dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvBase"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Base: 90°"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0° - 180°"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="180"
                    android:progress="90"
                    android:progressTint="#2196F3"
                    android:thumbTint="#2196F3"/>
            </LinearLayout>

            <!-- Shoulder Joint Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#f8f9fa"
                android:padding="16dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvShoulder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Shoulder: 90°"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0° - 180°"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekShoulder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="180"
                    android:progress="90"
                    android:progressTint="#4CAF50"
                    android:thumbTint="#4CAF50"/>
            </LinearLayout>

            <!-- Elbow Joint Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#f8f9fa"
                android:padding="16dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvElbow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Elbow: 90°"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0° - 180°"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekElbow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="180"
                    android:progress="90"
                    android:progressTint="#FF9800"
                    android:thumbTint="#FF9800"/>
            </LinearLayout>

            <!-- Wrist Pitch Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#f8f9fa"
                android:padding="16dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvWristPitch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wrist Pitch: 90°"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0° - 180°"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekWristPitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="180"
                    android:progress="90"
                    android:progressTint="#9C27B0"
                    android:thumbTint="#9C27B0"/>
            </LinearLayout>

            <!-- Wrist Roll Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#f8f9fa"
                android:padding="16dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvWristRoll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wrist Roll: 90°"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0° - 180°"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekWristRoll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="180"
                    android:progress="90"
                    android:progressTint="#607D8B"
                    android:thumbTint="#607D8B"/>
            </LinearLayout>

            <!-- Gripper Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f8f9fa"
                android:padding="16dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvGripper"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gripper: 90°"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30° (Open) - 150° (Closed)"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekGripper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="180"
                    android:progress="90"
                    android:progressTint="#F44336"
                    android:thumbTint="#F44336"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TreeBot Harvesting System with AI Detection © 2024"
            android:textSize="12sp"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>